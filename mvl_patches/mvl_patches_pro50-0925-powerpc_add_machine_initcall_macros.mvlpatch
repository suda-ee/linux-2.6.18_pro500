+++ linux-2.6.18/include/asm-powerpc/machdep.h
@@ -315,5 +315,28 @@ static inline void log_error(char *buf, 
 		ppc_md.log_error(buf, err_type, fatal);
 }
 
+#define __define_machine_initcall(mach,level,fn) \
+	static int __init __machine_initcall_##mach##_##fn(void) { \
+		if (machine_is(mach)) return fn(); \
+		return 0; \
+	} \
+	__define_initcall(level,__machine_initcall_##mach##_##fn);
+
+#define machine_core_initcall(mach,fn)		__define_machine_initcall(mach,"1",fn)
+#define machine_core_initcall_sync(mach,fn)	__define_machine_initcall(mach,"1s",fn)
