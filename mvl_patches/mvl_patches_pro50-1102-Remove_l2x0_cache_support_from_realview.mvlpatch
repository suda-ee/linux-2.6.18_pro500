#! /usr/bin/env bash
# Patch: -Remove_l2x0_cache_support_from_realview
# Date: Wed Apr 30 11:10:31 2008
# Source: ARM Ltd.
# MR: 26915
# Type: Defect Fix 
# Disposition: local 
# Signed-off-by: Srikanth Krishnakar <skrishna@in.mvista.com>
# Description:
#     This patch removes L2cache support from Relaview platform.
#     Due to cache coherency problem and to enable Dcache,this
#     support is disabled currently.
#   

PATCHNUM=1102
LSPINFO=include/linux/lsppatchlevel.h
TMPFILE=/tmp/mvl_patch_$$

function dopatch() {
    patch $* >${TMPFILE} 2>&1 <<"EOF"
Source: ARM Ltd.
MR: 26915
Type: Defect Fix 
Disposition: local 
Signed-off-by: Srikanth Krishnakar <skrishna@in.mvista.com>
Description:
    This patch removes L2cache support from Relaview platform.
    Due to cache coherency problem and to enable Dcache,this
    support is disabled currently.
  
Index: linux-2.6.18/arch/arm/mach-realview/Kconfig
===================================================================
--- linux-2.6.18.orig/arch/arm/mach-realview/Kconfig
+++ linux-2.6.18/arch/arm/mach-realview/Kconfig
@@ -10,7 +10,6 @@ config MACH_REALVIEW_EB
 config MACH_REALVIEW_PB1176
  	bool "Support RealView/PB1176 platform"
  	select ARM_GIC
-	select CACHE_L2X0
  	help
  	  Include support for the ARM(R) RealView ARM1176 Platform Baseboard.
 
Index: linux-2.6.18/arch/arm/mach-realview/realview_pb1176.c
===================================================================
--- linux-2.6.18.orig/arch/arm/mach-realview/realview_pb1176.c
+++ linux-2.6.18/arch/arm/mach-realview/realview_pb1176.c
@@ -202,7 +202,6 @@ static void __init realview_pb1176_init(
 	 *	l2x0_init(__io_address(REALVIEW_MPCORE_L220_BASE), 0x00790000, 0xfe000fff);
 	 */
 	/* 128Kb (16Kb/way) 8-way associativity. evmon/parity/share enabled. */
-	l2x0_init(__io_address(REALVIEW_MPCORE_L220_BASE), 0x00730000, 0xfe000fff);
 	clk_register(&realview_clcd_clk);
 
 	platform_device_register(&realview_flash_device);
Index: linux-2.6.18/mvl_patches/pro50-1102.c
===================================================================
--- /dev/null
+++ linux-2.6.18/mvl_patches/pro50-1102.c
@@ -0,0 +1,16 @@
+/*
+ * Author: MontaVista Software, Inc. <source@mvista.com>
+ *
